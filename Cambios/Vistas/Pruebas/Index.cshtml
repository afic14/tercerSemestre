    <script type="text/javascript" src="~/js/jquery-ui.min.js"></script>
</head>
<body>
    <header role="banner" class="position-relative">
        <nav class="background-primary-dott full-width section-top-small-padding text-padding-small sticky ">
            <div class="top-nav">

                <!-- right menu items -->
                <div class="top-nav left-menu">

                    <ul class="top-ul chevron">
                        <li>
                            <a>Configuración</a>
                            <ul>
                                <li><a>Nómina</a></li>
                                <li><a>Sucursales</a></li>
                            </ul>
                        </li>
                    </ul>

                </div>
                <div class="top-nav left-menu">

                    <ul class="right top-ul chevron">
                        <li><a asp-area="" asp-controller="Pruebas" asp-action="Index">Historial</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="margin-right: 55%; margin-left: 10%">
        <div id="cal">
            <div class="header">
                <span class="left button" id="prev"> &lang; </span>
                <span class="left hook"></span>
                <span class="month-year" id="label" style="text-align:center; position:center"> Julio 2020 </span>
                <span class="right hook"></span>
                <span class="right button" id="next"> &rang; </span>
            </div>
            <table id="days">
                <tr>
                    <td>Lunes</td>
                    <td>Martes</td>
                    <td>Miercoles</td>
                    <td>Jueves</td>
                    <td>Viernes</td>
                    <td>Sabado</td>
                    <td>Domingo</td>
                </tr>
            </table>
            <div id="cal-frame">
                <table class="curr">
                    <tbody>
                        <tr><td class="nil"></td><td class="nil"></td><td>1</td><td>2</td><td>3</td><td>4</td><td>5</td></tr>
                        <tr><td>6</td><td>7</td><td>8</td><td>9</td><td>10</td><td>11</td><td>12</td></tr>
                        <tr><td>13</td><td>14</td><td>15</td><td>16</td><td>17</td><td>18</td><td>19</td></tr>
                        <tr><td>20</td><td>21</td><td>22</td><td>23</td><td>24</td><td>25</td><td>26</td></tr>
                        <tr><td>27</td><td>28</td><td>29</td><td>30</td><td class="today">31</td><td class="nil"></td><td class="nil"></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div style="left: 55%; right: 10%; position:absolute; top:27%">
        <table>
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Actividad</th>
                    <th>Hora</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>30/07/2020</td>
                    <td>Consulta odontologica</td>
                    <td>11:10</td>
                </tr>
            </tbody>
        </table>
    </div>
    
</body>
</html>
